@model GetReservationDetailsByIdDTO
@{
    TempData["Title"] = "Reservation Details";
    var currentStatusColor = ReservationStatusHelper.GetColorClass(Model.Status);
    bool isCheckInDisabled = Model.Status == ReservationStatus.CheckedIn ||
                      Model.Status == ReservationStatus.CheckedOut ||
                      Model.Status == ReservationStatus.Cancelled;

