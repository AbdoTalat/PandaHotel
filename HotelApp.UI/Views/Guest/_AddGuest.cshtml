@model AddGuestDTO
@{
	int? BranchId = ViewBag.BranchId;
}

<form class="form-basic ajaxForm" asp-action="AddGuest" asp-controller="Guest"  method="post">
	<input type="hidden" asp-for="BranchId" value="@BranchId" />
    <div class="panel panel-flat">
        <div class="panel-body">
			<div class="content">
				<fieldset class="step" id="step1">
					<legend class="text-semibold"><i class="icon-reading position-left"></i> Personal details</legend>

					<div class="row">
							<div class="col-md-4">
                                <label>First Name<span class="text-danger">*</span></label>
								<div class="form-group">
										<input asp-for="FirstName" class="form-control box-input" placeholder="First Name" required>
								<span asp-validation-for="FirstName" class="text-danger validation-error-label"></span>
								</div>
                            </div>
							<div class="col-md-4">
							<label>Middle Name (Optional)</label>
                                <div class="form-group">
								<input asp-for="MiddleName" class="form-control"placeholder="Middle Name">
								<span class="text-danger validation-error-label" asp-validation-for="MiddleName"></span>
                                </div>
                            </div>
                        <div class="col-md-4">
                            <label>Last Name<span class="text-danger">*</span></label>
                            <div class="form-group">
                                <input asp-for="LastName" class="form-control box-input" placeholder="Last Name" required>
                                <span class="text-danger validation-error-label" asp-validation-for="LastName"></span>
                            </div>
                        </div>
						</div>

					<div class="row">
							<div class="col-md-6">
							<label>E-mail Address<span class="text-danger">*</span></label>
								<div class="form-group">
										<input asp-for="Email" class="form-control" placeholder="Email-Address" required>
								<span class="text-danger validation-error-label" asp-validation-for="Email"></span>
								</div>
							</div>
                        <div class="col-md-6">
                            <label>Phone #<span class="text-danger">*</span></label>
                            <div class="form-group">
                                <input asp-for="Phone" class="form-control" data-mask="+(99) 999-999-9999" placeholder="Enter your phone #" required>
                                <span class="text-danger help-block validation-error-label" asp-validation-for="Phone"></span>
                            </div>
                        </div>
					</div>

					<div class="row">
						<div class="col-md-6">
							<label>Proof Type<span class="text-danger">*</span></label>
							<div class="form-group">
								<select asp-for="TypeOfProof" class="form-control" id="select" required>
									<option></option>
									<option value="Passport">Passport</option>
									<option value="National ID">National ID</option>
								</select>
								<span class="text-danger validation-error-label" asp-validation-for="TypeOfProof"></span>
							</div>
						</div>
						<div class="col-md-6">
							<label>Proof Number<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="ProofNumber" class="form-control" placeholder="Proof Number" required>
								<span class="text-danger validation-error-label" asp-validation-for="ProofNumber"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-6">
							<label>Date Of Birth<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="DateOfBirth" type="date" class="form-control" placeholder="0/0/0" required>
								<span class="text-danger validation-error-label" asp-validation-for="DateOfBirth"></span>
							</div>
						</div>
                        <div class="col-md-6">
                            <label>Address<span class="text-danger">*</span></label>
                            <div class="form-group">
                                <input asp-for="Address" class="form-control" placeholder="Address" required>
                                <span class="text-danger validation-error-label" asp-validation-for="Address"></span>
                            </div>
                        </div>
					</div>
            
                </fieldset>
            </div>
        </div>
    </div>
	<div class="text-center">
		<button class="btn btn-link" data-dismiss="modal"> Cancel</button>
		<button class="btn bg-teal-400 btn-lg" type="submit"><i class="icon-plus2"></i> Add</button>
	</div>
</form>


<script>
	$(document).ready(function () {
		$('#select').select2({
			placeholder: "Select"
		});
	});
</script>
@await Html.PartialAsync("_ValidationScriptsPartial")
