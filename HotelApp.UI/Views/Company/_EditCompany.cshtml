@model EditCompanyDTO

<form class="form-basic ajaxEditForm" asp-action="EditCompany" asp-controller="Company" method="post">
	<input type="hidden" asp-for="@Model.Id" />
	<div class="panel panel-flat border-left-lg border-left-teal">
		<div class="panel-body">
			<div class="content">
				<fieldset>
					<div class="row">
						<div class="col-md-6">
							<label>Name:</label>
							<div class="form-group">
								<input asp-for="Name" class="form-control" required placeholder="Name">
								<span asp-validation-for="Name" class="text-danger validation-error-label"></span>
							</div>
						</div>
						<div class="col-md-6">
							<label>Phone:</label>
							<div class="form-group">
								<input asp-for="Phone" class="form-control" required placeholder="Phone">
								<span asp-validation-for="Phone" class="text-danger validation-error-label"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<label>Address:</label>
							<div class="form-group">
								<input asp-for="Address" class="form-control" required placeholder="Address">
								<span asp-validation-for="Address" class="text-danger validation-error-label"></span>
							</div>
						</div>
						<div class="col-md-6">
							<label>Notes:</label>
							<div class="form-group">
								<input asp-for="Notes" class="form-control" required placeholder="Notes">
								<span asp-validation-for="Notes" class="text-danger validation-error-label"></span>
							</div>
						</div>
					</div>
				</fieldset>
			</div>
		</div>
	</div>


	<div class="text-right">
		<button class="btn btn-link" data-dismiss="modal"> Cancel</button>
		<button type="submit" class="btn bg-teal-400 btn-lg"><i class="icon-checkmark4"></i> Save</button>
	</div>

</form>



@await Html.PartialAsync("_ValidationScriptsPartial")
