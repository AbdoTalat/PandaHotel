@model EditOptionDTO

<form class="form-basic ajaxEditForm" asp-action="EditOption" asp-controller="Option" method="post">
	<input asp-for="Id" type="hidden" />

	<div class="panel panel-flat">
		<div class="panel-body">
			<div class="content">
				<fieldset>

					<div class="row">
						<div class="col-md-6">
							<label>Name<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="Name" class="form-control" required placeholder="Name">
								<span asp-validation-for="Name" class="text-danger validation-error-label"></span>
							</div>
						</div>
						<div class="col-md-6">
							<label>Code<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="Code" class="form-control" required placeholder="Code">
								<span asp-validation-for="Code" class="text-danger validation-error-label"></span>
							</div>
						</div>

					</div>
					<div class="row">
						<div class="col-md-6">
							<label>Hourly Price<span class="text-danger">*</span></label>
							<div class="form-group has-feedback">
								<input asp-for="HourlyPrice" type="number" class="form-control" required placeholder="Hourly Price">
								<div class="form-control-feedback">
									$
								</div>
								<span asp-validation-for="HourlyPrice" class="text-danger validation-error-label"></span>
							</div>
						</div>
						<div class="col-md-6">
							<label>Daily Price<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="DailyPrice" type="number" class="form-control" required placeholder="Daily Price">
								<div class="form-control-feedback">
									$
								</div>
								<span asp-validation-for="DailyPrice" class="text-danger validation-error-label"></span>
							</div>
						</div>

					</div>
					<div class="row">
						<div class="col-md-6">
							<label>Extra Daily Price<span class="text-danger">*</span></label>
							<div class="form-group has-feedback">
								<input asp-for="ExtraDailyPrice" type="number" class="form-control" required placeholder="Extra Daily Price">
								<div class="form-control-feedback">
									$
								</div>
								<span asp-validation-for="ExtraDailyPrice" class="text-danger validation-error-label"></span>
							</div>
						</div>
						<div class="col-md-6">
							<label>Weekly Price<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="WeeklyPrice" type="number" class="form-control" required placeholder="Weekly Price">
								<div class="form-control-feedback">
									$
								</div>
								<span asp-validation-for="WeeklyPrice" class="text-danger validation-error-label"></span>
							</div>
						</div>

					</div>
					<div class="row">
						<div class="col-md-6">
							<label>Monthly Price<span class="text-danger">*</span></label>
							<div class="form-group has-feedback">
								<input asp-for="MonthlyPrice" type="number" class="form-control" required placeholder="Monthly Price">
								<div class="form-control-feedback">
									$
								</div>
								<span asp-validation-for="MonthlyPrice" class="text-danger validation-error-label"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="panel panel-flat">
								<div class="panel-heading">
									<h6 class="panel-title">More Option Setup<a class="heading-elements-toggle"><i class="icon-more"></i></a></h6>
								</div>
								<div class="panel-body">
									<div class="alpaca-control checkbox">
										<label class="checkbox-inline checkbox-left checkbox-switchery switchery-sm">
											<input type="checkbox" asp-for="IsActive" class="switchery">
											Is Active
										</label>
									</div>
									<div class="alpaca-control checkbox">
										<label class="checkbox-inline checkbox-left checkbox-switchery switchery-sm">
											<input type="checkbox" asp-for="DisplayOnline" class="switchery">
											Display Online
										</label>
									</div>
								</div>
							</div>
						</div>
					</div>

				</fieldset>
			</div>
		</div>
	</div>
	<div class="text-center">
		<button class="btn btn-link" data-dismiss="modal"> Cancel</button>
		<button type="submit" class="btn bg-teal-400 btn-lg"><i class="icon-checkmark4"></i> Save</button>
	</div>
</form>




<script>
	var elems = Array.prototype.slice.call(document.querySelectorAll('.switchery'));
	elems.forEach(function (html) {
		new Switchery(html, { color: '#4CAF50', size: 'small' });
	});

</script>
@await Html.PartialAsync("_ValidationScriptsPartial")