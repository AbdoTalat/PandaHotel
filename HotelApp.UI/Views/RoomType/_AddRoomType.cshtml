@model AddRoomTypeDTO
@{
	int BranchId = ViewBag.BranchId;
}

<form class="form-basic ajaxForm" asp-action="AddRoomType" asp-controller="RoomType" method="post">
	<input type="hidden" asp-for="BranchId" value="@BranchId" />
	<div class="panel panel-flat">
		<div class="panel-body">
			<div class="content">
				<fieldset class="step" id="step1">

					<div class="row">
						<div class="col-md-6">
							<label>Type Name<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="Name" class="form-control box-input" placeholder="First Name" required>
								<span asp-validation-for="Name" class="text-danger validation-error-label"></span>
							</div>
						</div>
						<div class="col-md-6">
							<label>Price Per Night<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="PricePerNight" class="form-control" placeholder="Floor">
								<span class="text-danger validation-error-label" asp-validation-for="PricePerNight"></span>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<label>Max Num Of Adults<span class="text-danger">*</span></label>
							<div class="form-group ">
								<input asp-for="MaxNumOfAdults" class="form-control box-input" placeholder="First Name" required>
								<span asp-validation-for="MaxNumOfAdults" class="text-danger validation-error-label"></span>
							</div>
						</div>
						<div class="col-md-6">
							<label>Max Num Of Childrens<span class="text-danger">*</span></label>
							<div class="form-group">
								<input asp-for="MaxNumOfChildrens" class="form-control" placeholder="Floor">
								<span class="text-danger validation-error-label" asp-validation-for="MaxNumOfChildrens"></span>
							</div>
						</div>
					</div>

					<div class="row">
						<div class="col-md-12">
							<label>Description<span class="text-danger">*</span></label>
							<div class="form-group">
								<textarea asp-for="Description" class="form-control" style="min-width:780px" placeholder="Room Description"></textarea>
								<span class="text-danger validation-error-label" asp-validation-for="Description"></span>
							</div>
						</div>
					</div>

				</fieldset>
			</div>
		</div>
	</div>
	<div class="text-center">
		<button class="btn btn-link" data-dismiss="modal"> Cancel</button>
		<button type="submit" class="btn bg-teal-400 btn-lg"><i class="icon-plus2"></i> Add</button>
	</div>
</form>

@await Html.PartialAsync("_ValidationScriptsPartial")
