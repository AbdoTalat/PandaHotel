                <button type="button" class="close" data-dismiss="modal">×</button>
                <h5 class="modal-title">Reservation Charges Summary</h5>
            </div>

            <div class="modal-body">
                <div class="panel panel-flat">
                    <div id="rateDetails"></div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>


@section Scripts{
<script>
$(document).ready(function () {
    const $rateDetails = $('#rateDetails');

    const rateId = @Model.RateId; // integer
    const reservationId = @Model.Id; // integer
    const checkIn = "@Model.CheckInDate.ToString("yyyy-MM-ddTHH:mm:ss")";
    const checkOut = "@Model.CheckOutDate.ToString("yyyy-MM-ddTHH:mm:ss")";

    const roomTypeQuantities = @Html.Raw(
        Json.Serialize(
            Model.ReservationRoomTypes.Select(r => new {
                RoomTypeId = r.RoomTypeId,
                Quantity = r.Quantity
            })
        )
    );

    // Load Charges Summary when modal opens
    $('#rateModal').on('show.bs.modal', function () {
        if (!rateId || !checkIn || !checkOut) {
            $rateDetails.html('<p class="text-danger">Please select a rate, check-in, and check-out.</p>');
            return;
        }

        if (!roomTypeQuantities.length) {
            $rateDetails.html('<p class="text-danger">Please add at least one room.</p>');
            return;
        }

        $rateDetails.html('Loading...');

        $.ajax({
            url: '/Rate/GetReservationChargesSummary',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                RateId: +rateId,
                CheckIn: new Date(checkIn),
                CheckOut: new Date(checkOut),
                ReservationId: +reservationId,
                RoomTypeQuantities: roomTypeQuantities
            })
        })
        .done(res => {
            if (!res.success || !res.data) {
                $rateDetails.html(`<p class="text-danger">${res.message || 'No calculation available.'}</p>`);
                return;
            }

            const summary = res.data.chargesSummary;
            let html = `<div class="pre-scrollable" style="min-height:500px">`;

            // RATE TYPES
            html += `<table class="table table-framed table-hover m-0">
                        <thead class="table-light">
                            <tr class="border-double active">
                                <th>RoomType/Charge</th>
                                <th>Rooms</th>
                                <th>Unit</th>
                                <th>Rate</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>`;
            summary.filter(x => x.type === 'Rate').forEach(item => {
                const rowClass = item.charge === 'Total' ? 'success' : '';
                html += `<tr class="${rowClass}">
                            <td>${item.charge}</td>
                            <td>${item.rooms || ""}</td>
                            <td>${item.unit || ""}</td>
                            <td>${item.rate || ""}</td>
                            <td>${item.total}</td>
                         </tr>`;
            });
            html += `</tbody></table><br/>`;

            // PAYMENTS
            html += `<table class="table table-framed table-hover m-0">
                        <thead class="table-light">
                            <tr class="border-double active">
                                <th>Payment Type</th>
                                <th colspan="4"></th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>`;
            summary.filter(x => x.type === 'Payment').forEach(item => {
                const rowClass = item.charge === 'Total Payments' ? 'success' : '';
                html += `<tr class="${rowClass}">
                            <td>${item.charge}</td>
                            <td colspan="4"></td>
                            <td>${item.total}</td>
                         </tr>`;
            });
            html += `</tbody></table>`;

            // BALANCE
            const balanceItem = summary.find(x => x.type === 'Balance');
            if (balanceItem) {
                html += `<br/>
                         <div class="alert alert-primary no-border">
                             <h5 class="text-semibold">Balance: ${balanceItem.total}</h5>
                         </div>`;
            }

            html += `</div>`; // container
            $rateDetails.html(html);
        })
        .fail(() => $rateDetails.html('<p class="text-danger">Error loading charges summary.</p>'));
    });
});
</script>
    
    
